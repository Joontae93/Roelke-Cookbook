---
// import placeholder from '../assets/image-placeholder.jpg';
import { Picture } from 'astro:assets';

const { title, text, image } = Astro.props;
---

<div class="card">
	<div class="row g-0">
		<div class="col-md-4">
			<img
				src="#"
				alt={image.alt ?? 'image placeholder'}
				class="img-fluid rounded-start"
			/>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<p class="card-title h4">{title}</p>
				<p class="card-text">
					{text}
				</p>
			</div>
		</div>
	</div>
</div>
