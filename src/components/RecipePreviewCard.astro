---
// import placeholder from '../assets/image-placeholder.jpg';
import { Picture } from 'astro:assets';

const {
	data: { title, text, cover, coverAlt },
} = Astro.props;
---

<div class="card">
	<div class="row g-0">
		<div class="col-md-4">
			<Picture
				class="img-fluid rounded-start"
				src={cover}
				alt={coverAlt ?? 'image placeholder'}
			/>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<p class="card-title h4">{title}</p>
				<p class="card-text">
					{text}
				</p>
			</div>
		</div>
	</div>
</div>
